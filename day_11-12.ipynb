import pandas as pd
import matplotlib.pyplot as plt

df = pd.read_csv("smartphone_usage_365_days.csv")

print("----- HEAD -----")
print(df.head())

print("----- TAIL -----")
print(df.tail())

print("----- INFO -----")
print(df.info())

print("----- DESCRIBE -----")
print(df.describe())

# Task-2
avg_screen_time = df["screen_time_hours"].mean()
highest_gaming_hours = df["gaming_hours"].max()
total_notifications = df["notifications"].sum()

print("Average Screen Time:", round(avg_screen_time, 2))
print("Highest Gaming Hours:", highest_gaming_hours)
print("Total Notifications:", total_notifications)

# Task-3
plt.figure(figsize=(8,5))
plt.scatter(df['screen_time_hours'], df['notifications'])

plt.title("Screen Time vs Notifications")
plt.xlabel("Screen Time (hours)")
plt.ylabel("Number of Notifications")

plt.grid(True)
plt.show()

# Task-4
plt.figure(figsize=(10,5))
plt.plot(df['day'], df['screen_time_hours'], marker='o')

plt.title("Daily Screen Time Trend")
plt.xlabel("Day")
plt.ylabel("Screen Time (hours)")

plt.grid(True)
plt.show()

# Task-5
plt.figure(figsize=(10,5))

plt.plot(df['day'], df['social_media_hours'], 
         color='blue', marker='o', label='Social Media Hours')

plt.plot(df['day'], df['gaming_hours'], 
         color='red', marker='s', label='Gaming Hours')

plt.title("Social Media vs Gaming Usage")
plt.xlabel("Day")
plt.ylabel("Hours")

plt.legend()

plt.grid(True)

plt.show()

# Task-6
activities = ["Screen Time", "Social Media", "Gaming", "Call Duration"]
totals = [
    df["screen_time_hours"].sum(),
    df["social_media_hours"].sum(),
    df["gaming_hours"].sum(),
    df["call_duration_hours"].sum()
]

plt.figure(figsize=(8,5))
plt.barh(activities, totals)

plt.title("Total Activity Hours (Yearly)")
plt.xlabel("Total Hours")
plt.ylabel("Activities")

plt.grid(True, axis='x')
plt.show()

# Task-7
plt.figure(figsize=(8,5))
plt.hist(df['notifications'], bins=20, edgecolor='black')

plt.title("Notification Frequency Distribution")
plt.xlabel("Number of Notifications")
plt.ylabel("Frequency")

plt.grid(True)
plt.show()